
@{
    ViewData["Title"] = "Course";
}

<h2>Course Overview</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Course">The Course</a></li>
    </ol>
</nav>
<p>Welcome to ______ country club. We have a nine hole course</p>

<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6">
        <img class="img-fluid" src="~/images/NewScoreCard.png" alt="Scorecard" />
    </div>
    <div class="col-sm-12 col-md-6 col-lg-6">
        <img class="img-fluid" src="~/images/overview.png" alt="Overview" />
    </div>
</div>
<hr/>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/augusta.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Hole 1</h5>
                <p>Promenade</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/kiwah.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/links.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

