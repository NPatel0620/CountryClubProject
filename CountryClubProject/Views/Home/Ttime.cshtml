@model TtimeViewModel
@{
    ViewData["Title"] = "Ttime";
}

<h2>Book Your Tee Times Here</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Ttime">Tee Times</a></li>
    </ol>
</nav>
<div>
    <form method="post">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Time</th>
                    <th scope="col">Player 1</th>
                    <th scope="col">Player 2</th>
                    <th scope="col">Player 3</th>
                    <th scope="col">Player 4</th>
                    <th scope="col">Caddy Requested</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Groups.Count(); i++)
                {
                    <tr>

                        <th scope="row">@Model.Groups[i].Time.ToString("HH:mm")</th>
                        <td>
                            <input type="hidden" asp-for="Groups[i].Time" />
                            <input type="text" asp-for="Groups[i].Players[0]" placeholder="Player 1" />
                        </td>
                        <td>
                            <input type="text" asp-for="Groups[i].Players[1]" placeholder="Player 2" />
                        </td>
                        <td>
                            <input type="text" asp-for="Groups[i].Players[2]" placeholder="Player 3" />
                        </td>
                        <td>
                            <input type="text" asp-for="Groups[i].Players[3]" placeholder="Player 4" />
                        </td>
                        <td>
                            <input type="text" asp-for="Groups[i].Caddy" placeholder="Caddy" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <input type="submit" />
    </form>
</div>

